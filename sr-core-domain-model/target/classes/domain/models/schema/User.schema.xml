<BizItemSchema itemType="BizItemSchemas" targetItemType="User">
    <System>
        <Property name="itemType"     caption="Item Type"     captionTransKey="itemType"     type="String" indexed="false" unique="false" constrints="NotNull,Size_1_100"/>
        <Property name="id"           caption="System ID"     captionTransKey="id"           type="ObjectId"/>
        <Property name="trackingId"   caption="TrackingID"    captionTransKey="trackingId"   type="String" indexed="true" unique="true"  autogenerated="true" constrints="NotNull, Size_1_100"/>
        <Property name="createdDate"  caption="Created Date"  captionTransKey="createdDate"  type="Date"   indexed="true" unique="false" constrints="NotNull"/>
        <Property name="modifiedDate" caption="Modified Date" captionTransKey="modifiedDate" type="Date"   indexed="true" unique="false" constrints="NotNull"/>
    </System>

    <Content>
        <Property name="firstName"       caption="First Name"       type="String"  constrints="NotNull,Size_1_100"/>
        <Property name="lastName"        caption="Last Name"        type="String"  constrints="NotNull,Size_1_100"/>
        <Property name="email"           caption="Email"            type="String"  indexed="true"  unique="true"  constrints="NotNull,Size_1_50,Regex_Email"/>
        <Property name="password"        caption="Password"         type="String"  constrints="NotNull,Size_1_500"/>
        <Property name="enabled"         caption="Enabled"          type="Boolean" constrints=""/>
        <Property name="status"          caption="Status"           type="Enum"    enumName="EnUserStatus" constrints="Enum"/>
<!--        <User name="roles"           caption="Roles"            captionTransKey="roles"           type="EnumList"   indexed="false" unique="false" enumName="EnUserRole"   constrints="EnumList"/>-->
    </Content>
</BizItemSchema>